$width = 1024px
$height = 768px

.screenWrapper
  position fixed
  width 70vw
  height 70vh
  max-width $width
  max-height $height
  top 50%
  left 50%
  transform translate(-50%, -50%)
  overflow hidden
  shadowBorder()

.screen
  position relative
  height 100%

.screenElement
  position absolute
  cursor move
