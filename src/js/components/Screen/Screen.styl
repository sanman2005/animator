$width = 1024px
$height = 768px

.screenWrapper
  position fixed
  width 70vw
  height 70vh
  max-width $width
  max-height $height
  top 50%
  left 50%
  transform translate(-50%, -50%)
  overflow hidden
  background-color white
  shadowBorder()

.screen
  position relative
  height 100%
  transition-timing-function linear

.screenCanvas
  position absolute
  top 0
  left 0
  width 100%
  height 100%
  pointer-events none

.screenElement
  position absolute
  transition-timing-function linear
  cursor move
  user-select none

  &--active
    highlight()

  > *
    padding 0

  &__image
    position absolute
    fullSize()
    background-position center
    pointer-events none
    z-index 2

  &--active &__image
    animation animate-back linear infinite

  &--effect
    img
      display none

@keyframes animate-back
  0%
    background-position 0 0

  100%
    background-position 0 100%
