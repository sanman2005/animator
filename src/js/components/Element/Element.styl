.element
  position relative
  display flex
  max-width 100px
  height 100%
  padding 10px
  justify-content center
  align-items center

  img
    display block
    width 100%
    height 100%
    object-fit contain
    pointer-events none

  &__edit
    position absolute
    display none
    top 10%
    right 10%
    width 20%
    height 20%
    cursor pointer
    z-index 5

    svg
      display block
      width 100%
      height auto

      *
        fill $colorBlue1

    &:hover *
      fill $colorBlue2


    /.screenElement--active &
    /.toolbox__item--active &
        display block
