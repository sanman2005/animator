$width = 400px
$indent = 20px

.category
  position relative
  flex($justify: center)
  width 100%
  height 100%
  color $colorGray1
  text-transform capitalize

  &:not(:hover) &__content
    display none

  &__content
    display flex
    background-color $colorBackMain
    contentBox()
    box-shadow 0 0 20px $colorShadowDark

    > *
      margin 10px
      shadow($withHover: true)

    &-wrapper
      position absolute

      &--left
        top 0
        width $width
        right 100%
        padding-right $indent

      &--right
        top 0
        width $width
        left 100%
        padding-left $indent

      &--top
        left 0
        height $width
        bottom 100%
        padding-bottom $indent

      &--bottom
        left 0
        height $width
        top 100%
        padding-top $indent
